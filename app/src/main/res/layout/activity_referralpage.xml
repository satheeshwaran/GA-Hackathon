<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="start"
    android:background="@color/SummaryBackgroundColor">


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ReferFriendActivity">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:id="@+id/relativeLayout"
            android:gravity="center_horizontal"
            android:background="@color/NavBarColor"
            android:paddingTop="20dp"
            android:paddingBottom="20dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="@dimen/image_width"
                android:layout_height="@dimen/image_width"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/ref"
                app:border_color="@android:color/white"
                app:border_width="2dp"
                app:finalHeight="@dimen/image_final_width"
                app:finalYPosition="2dp"
                app:layout_behavior="com.oozmakappa.oyeloans.AvatarImageBehavior"
                app:startHeight="2dp"
                app:startToolbarPosition="2dp"
                app:startXPosition="2dp"
                android:id="@+id/userProfilePicture"
                android:layout_alignParentTop="true"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Share Ur Invite Code"
                android:id="@+id/textView9"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/userProfilePicture"
                android:textColor="@color/WhiteColor"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="OYE_LOAN"
                android:id="@+id/textView10"
                android:layout_below="@+id/textView9"
                android:textColor="@color/WhiteColor"
                />

        </RelativeLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Refer Your friends. You'll get 250Rs FlipKart Voucher upon their sucessfull aplication"
            android:id="@+id/textView12"
            android:layout_below="@+id/relativeLayout"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_centerHorizontal="true" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Details"
            android:id="@+id/textView11"
            android:layout_marginTop="28dp"
            android:layout_below="@+id/textView12"
            android:layout_centerHorizontal="true" />

        <Button
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_button_shape"
            android:text="@string/inviteMe"
            android:textSize="16dp"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:id="@+id/profileProceedButton"
            android:layout_below="@+id/textView11"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="48dp" />

    </RelativeLayout>

</android.support.v4.widget.DrawerLayout>