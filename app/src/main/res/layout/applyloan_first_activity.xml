<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:circular="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="start"
    android:background="@color/SummaryBackgroundColor">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/SummaryBackgroundColor">

            <View
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@color/NavBarColor"
                android:id="@+id/parentView"></View>

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/ic_arrow_back_white_48dp"
                android:layout_marginTop="18dp"
                android:layout_marginLeft="10dp"
                android:id="@+id/menuIcon"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Loan Application"
                android:id="@+id/textView2"
                android:layout_toEndOf="@+id/menuIcon"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="15dp"
                android:textColor="#ffffff"
                android:textSize="17dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Loan Home Page"
                android:id="@+id/textView4"
                android:layout_toEndOf="@+id/menuIcon"
                android:layout_below="@+id/textView2"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="3dp"
                android:textColor="#ffffff"
                android:textSize="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Welcome User!"
                android:layout_below="@+id/textView2"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="70dp"
                android:id="@+id/textView3"
                android:textColor="#083A73"
                android:textSize="20dp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Please select amount from range to continue."
                android:layout_below="@+id/textView3"
                android:textColor="#083A73"
                android:textSize="10dp"
                android:textStyle="normal"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="70dp"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shadow_drawable"
            android:layout_margin="8dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center"
            android:background="#90CAF9">
                <me.angrybyte.circularslider.CircularSlider
                    android:id="@+id/circular"
                    android:layout_width="250dp"
                    android:layout_height="250dp"
                    android:padding="30dp"
                    circular:angle="3.14"
                    circular:border_color="#083A73"
                    circular:border_thickness="5dp"
                    circular:thumb_color="@color/NavBarColor"
                    circular:thumb_size="15dp"
                    android:gravity="center"/>


                <TextView android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rs. 1000"
                    android:textColor="#083A73"
                    android:textStyle="bold"
                    android:layout_alignLeft="@id/circular"
                    android:layout_alignTop="@id/circular"
                    android:layout_alignRight="@id/circular"
                    android:layout_alignBottom="@id/circular"
                    android:gravity="center"
                    android:textSize="20dp"/>
        </RelativeLayout>
        </LinearLayout>

    </LinearLayout>


</android.support.v4.widget.DrawerLayout>


