<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="100dp"
    android:layout_height="120dp"
    android:orientation="vertical">

    <ImageButton
        android:id="@+id/categoryIcon"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:background="@android:color/transparent"
        android:scaleType="centerCrop"
        android:src="@drawable/home_category"
        android:contentDescription="@string/loan_reason_icon" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/categoryIcon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:id="@+id/categoryValueLabel"
        android:textAlignment="center"
        android:text="Home Renovation"
        android:textSize="14dp"
        android:textStyle="bold" />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/selectedIcon"
        android:src="@drawable/selected_tick"
        android:layout_alignParentRight="true"
        android:visibility="invisible"/>
</RelativeLayout>
