<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".EditMyProfilePage"
    app:behavior_overlapTop="30dp"
    tools:showIn="@layout/profile_page"
    android:background="@android:color/white"
    android:scrollbars="none">


    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/lightGray">
        <android.support.v7.widget.CardView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:cardElevation="0dp"
            app:contentPadding="16dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Phone Number"
                android:id="@+id/phoneNumberTitle"
                />
            <include layout="@layout/item_divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/phoneNumberTitle"
                android:layout_marginTop="25dp"/>


            <TextView
                android:layout_width="match_parent"
                android:lineSpacingExtra="8dp"
                android:text="@string/dummPhoneNumber"
                android:textSize="14dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:id="@+id/phoneNumberValue"/>

        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:cardElevation="0dp"
            app:contentPadding="16dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/DOBTitle"
                android:id="@+id/DOBTitle"
                />
            <include layout="@layout/item_divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/DOBTitle"
                android:layout_marginTop="25dp"/>


            <TextView
                android:layout_width="match_parent"
                android:lineSpacingExtra="8dp"
                android:text="@string/dummyDOBAndAge"
                android:textSize="14dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:id="@+id/DOBAgeValue"/>

        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:cardElevation="0dp"
            app:contentPadding="16dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Address"
                android:id="@+id/addressTitle"
                />
            <include layout="@layout/item_divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/addressTitle"
                android:layout_marginTop="25dp"/>


            <TextView
                android:layout_width="match_parent"
                android:lineSpacingExtra="8dp"
                android:text="@string/dummyAddress"
                android:textSize="14dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:id="@+id/addressValue"/>

        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:cardElevation="2dp"
            app:contentPadding="16dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/educationTitle"
                android:id="@+id/educationTitle"
                />
            <include layout="@layout/item_divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/educationTitle"
                android:layout_marginTop="25dp"/>


            <TextView
                android:layout_width="match_parent"
                android:lineSpacingExtra="8dp"
                android:text="@string/dummyEmployment"
                android:textSize="14dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:id="@+id/educationValue"/>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:cardElevation="2dp"
            app:contentPadding="16dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Employment"
                android:id="@+id/employmentTitle"
                />
            <include layout="@layout/item_divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/employmentTitle"
                android:layout_marginTop="25dp"/>
            <TextView
                android:layout_width="match_parent"
                android:text="@string/dummyEmployment"
                android:textSize="14dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:paddingBottom="10dp"
                android:id="@+id/employmentValue"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dummyTotalExp"
                android:textSize="14dp"
                android:layout_marginTop="85dp"
                android:id="@+id/totalExperience"/>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:cardElevation="2dp"
            app:contentPadding="16dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Social"
                android:id="@+id/socialHeader"
                />
            <include layout="@layout/item_divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/socialHeader"
                android:layout_marginTop="25dp"/>


            <TextView
                android:layout_width="match_parent"
                android:lineSpacingExtra="8dp"
                android:text="@string/dummySocial"
                android:textSize="14dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:id="@+id/fbProfileLinkValue"/>
        </android.support.v7.widget.CardView>
    </TableLayout>
</android.support.v4.widget.NestedScrollView>